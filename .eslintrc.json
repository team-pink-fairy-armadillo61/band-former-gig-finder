{
    "root": true,
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:react/recommended",
        "prettier"
    ],
    "overrides": [
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true
          }
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": ["warn", 2],
        "no-unused-vars": ["warn", { "vars": "local" }],
        "no-case-declarations": "warn",
        "prefer-const": "warn",
        "quotes": ["warn", "single"],
        "react/prop-types": "off",
        "semi": ["warn", "always"],
        "space-infix-ops": "warn"
      },
      "settings": {
        "react": { "version": "detect"}
      }
}
